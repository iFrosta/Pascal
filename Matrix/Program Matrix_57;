Program Matrix_57;
const  m=4;
       n=4;
var 
k,i,j,a:integer;
dif:    boolean;
s:       string;

matrix: array [1..m,1..n]of integer;

begin
a:=0;

for i:=1 to m do begin
  s:='';
  for j:= 1 to n do begin
    matrix[i,j]:= n*(i-1)+j; 
    s:=inttostr(matrix[i,j]+' '*(4-length(inttostr(matrix[i,j])));
  end;
  writeln(matrix[i]);
end;  
for i:=1 to m do begin
  
  end;

writeln('   ',a);  

end.